# Configuração do servidor
PORT=3000

# Banco de dados (MySQL/MariaDB)
DATABASE_URL="mysql://usuario:senha@localhost:3306/ecommerce"

# JWT Secrets (gere valores aleatórios fortes em produção)
JWT_ACCESS_SECRET="seu-jwt-access-secret-aqui"
JWT_REFRESH_SECRET="seu-jwt-refresh-secret-aqui"
JWT_ISSUER="ecommerce-api"

# Redis (opcional - usado para rate limiting e sessões)
REDIS_URL="redis://localhost:6379"

# Email (SMTP)
EMAIL_HOST="smtp.exemplo.com"
EMAIL_PORT=587
EMAIL_USER="noreply@seudominio.com"
EMAIL_PASS="senha-do-email"

# Frontend URL (para links de ativação e redefinição de senha)
FRONTEND_URL="http://localhost:5173"

# Cookie secure (true em produção com HTTPS)
COOKIE_SECURE=false
